<h2>New Card for {{.Deck.Name}}</h2>

<form method="post" action="/decks/{{.Deck.Id}}/cards/new" class="form form-vertical">
  <div class="form-group">
    <label>Context</label>
    <input name="Context" class="form-control">
  </div>

  <div class="form-group">
    <label>Front</label>
    <textarea name="Front" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label>Back</label>
    <textarea name="Back" class="form-control"></textarea>
  </div>

  <input type="submit" class="btn btn-default">
</form>
