<h2>New Card</h2>

<form class="form form-vertical">
  <div class="form-group">
    <label>Context</label>
    <input name="card[context]" class="form-control">
  </div>

  <div class="form-group">
    <label>Front</label>
    <textarea name="card[front]" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label>Back</label>
    <textarea name="card[back]" class="form-control"></textarea>
  </div>

  <input type="submit" class="btn btn-default">
</form>
